{
  "name": "bible-daily",
  "version": "1.0.0",
  "description": "중고등학생 성경말씀 소감 공유 플랫폼",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm --filter frontend dev\" \"pnpm --filter backend start:dev\"",
    "build": "pnpm --filter shared build && pnpm --filter frontend build && pnpm --filter backend build",
    "start": "pnpm --filter backend start:prod"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  }
}
